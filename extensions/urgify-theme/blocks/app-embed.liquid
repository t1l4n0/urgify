{
  "name": "Urgify",
  "target": "body",
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "paragraph",
      "content": "The Urgify app embedding activates all Urgify functions in your shop. It enables you to display countdown timers, limited offers, scarcity banners, and stock alerts on your product pages."
    }
  ]
}
{% endschema %}


