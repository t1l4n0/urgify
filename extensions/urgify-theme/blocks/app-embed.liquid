{% comment %}
  Urgify App Embed block. This creates a proper Theme App Embed entry
  that merchants can enable in the Theme Editor. It loads the core snippet
  and auto-injects the stock alert when enabled in the admin app.
{% endcomment %}

{% render 'core' %}

<!-- Quickstart entfernt: kein Embed-Ping mehr nÃ¶tig -->

{% schema %}
{
  "name": "Urgify",
  "target": "body",
  "settings": [
    {
      "type": "paragraph",
      "content": "The Urgify app embedding activates all Urgify functions in your shop. It enables you to display countdown timers, limited offers, scarcity banners, stock alerts, popups, and cart upsells on your storefront."
    },
    {
      "type": "header",
      "content": "Cart Upsell"
    },
    {
      "type": "checkbox",
      "id": "enable_cart_upsell",
      "label": "Enable Cart Upsell",
      "default": true,
      "info": "Display recommended upsell products in the cart drawer when customers add products to their cart."
    }
  ]
}
{% endschema %}


