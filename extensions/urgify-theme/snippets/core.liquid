{{ 'urgify-stock-alert.css' | asset_url | stylesheet_tag }}
<script src="{{ 'urgify.js' | asset_url }}" defer></script>
<script src="{{ 'urgify-stock-alert.js' | asset_url }}" defer></script>
{% render 'urgify-stock-alert-auto' %}
{% endunless %}


