// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

// Webhook-Event-Tracking für Idempotenz
model WebhookEvent {
  id          String   @id
  topic       String
  shop        String
  processedAt DateTime @default(now())
  createdAt   DateTime @default(now())

  @@map("webhook_events")
}

// Dead-Letter-Queue für fehlgeschlagene Webhook-Verarbeitungen
model DeadLetter {
  id          String    @id @default(cuid())
  topic       String
  shop        String
  payload     String    // JSON-String
  error       String
  stack       String?
  retryCount  Int       @default(0)
  retriedAt   DateTime?
  lastError   String?
  createdAt   DateTime  @default(now())

  @@map("dead_letters")
}

model GdprRequest {
  id               String   @id @default(cuid())
  shop             String
  topic            String
  customerId       String?
  customerEmailHash String?
  status           String   @default("queued")
  artifactPath     String?
  details          String?
  createdAt        DateTime @default(now())
  processedAt      DateTime?
  deletedAt        DateTime?

  @@index([shop, topic])
  @@index([shop, customerId])
}

model CartUpsellSettings {
  id                  String   @id @default(cuid())
  shop                String   @unique
  enabled             Boolean  @default(false)
  heading             String   @default("Recommendations")
  maxProducts         Int      @default(3)
  showPrice           Boolean  @default(true)
  showCompareAtPrice  Boolean  @default(true)
  imageSize           String   @default("medium")
  buttonLabel         String   @default("Add to cart")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("cart_upsell_settings")
}
